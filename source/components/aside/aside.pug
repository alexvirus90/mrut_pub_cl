div(class="aside")
  div(class="aside-header") Информация
    span(class="close" data-dismiss="aside" aria-hidden="true") &times;
  div(class="aside-contents")
    ul(class="nav nav-tabs" id="myTab" role="tablist")
      li(class="nav-item")
        a(class="nav-link active" id="done-tab" data-toggle="tab" href="#done" role="tab" aria-controls="done" aria-selected="false") Выполнено
      li(class="nav-item")
        a(class="nav-link " id="performed-tab" data-toggle="tab" href="#performed" role="tab" aria-controls="performed" aria-selected="true") Выполняется
    div(class="tab-content" id="tabContent")
      div(class="tab-pane fade show active" id="done" role="tabpanel" aria-labelledby="done-tab")
      div(class="tab-pane fade  job" id="performed" role="tabpanel" aria-labelledby="performed-tab")
